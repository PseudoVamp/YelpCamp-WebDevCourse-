<!-- this layout function injects everything below it into the boilerplate where we call the ejs function body -->
<% layout('layouts/boilerplate.ejs')%>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <!-- enctype is an image uploading data type -->
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title:</label>
        <input
          class="form-control"
          id="title"
          type="text"
          name="campground[title]"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>

      <!-- <input type="file" name="image" multiple /> -->

      <!-- <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          id="image"
          type="text"
          name="campground[image]"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div> -->
      <div class="mb-3">
        <label class="form-label" for="location">Location:</label>
        <input
          class="form-control"
          id="location"
          type="text"
          name="campground[location]"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price Per Night:</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            id="price"
            name="campground[price]"
            type="text"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            required
          />
          <div class="valid-feedback">Looks Good!</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Images:</label>
        <input
          name="image"
          class="form-control"
          type="file"
          id="image"
          multiple
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="descriptions">Description:</label>
        <textarea
          class="form-control"
          id="descriptions"
          type="text"
          name="campground[description]"
          required
        ></textarea>
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>

    <a href="/campgrounds">All Campgrounds</a>
  </div>
</div>
