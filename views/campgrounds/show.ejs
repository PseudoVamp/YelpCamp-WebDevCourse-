<!-- this layout function injects everything below it into the boilerplate where we call the ejs function body -->
<% layout('layouts/boilerplate.ejs')%>
<h1><%= campground.title %></h1>
<h2><%= campground.location %></h2>
<img src="<%= campground.image %>" alt="" />
<p><%= campground.description %></p>
<p><a href="/campgrounds/<%=campground._id%>/edit">Edit</a></p>
<!-- this form below is linked to the app.delete in app.js and is used to get rid of this particular campground -->

<form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
  <button>Delete</button>
</form>

<footer>
  <a href="/campgrounds">All Campgrounds</a>
</footer>
